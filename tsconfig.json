{
    "compilerOptions": {
        "module": "system",
        "removeComments": true,
        "target": "es6",
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "sourceMap": true,
        "lib": [
            "es2017",
            "es2015",
            "dom"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
